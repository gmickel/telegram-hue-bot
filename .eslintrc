{
  // I want to use babel-eslint for parsing!
  "parser": "babel-eslint",
  "extends": "airbnb",
  "ecmaFeatures": {
    "modules": true
  },
  "globals": {
    describe: false,
    it: false,
    should: false,
    expect: false,
    beforeEach: false
  },
  "env": {
    // in CommonJS
    "node": true
  },
  // To give you an idea how to override rule options:
  "rules": {
    "comma-dangle": 0,
    "quotes": [2, "single"],
    "eol-last": [0],
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0],
    "space-before-function-paren": [0],
    "prefer-arrow-callback": [0],
    "strict": [0]
  }
}
